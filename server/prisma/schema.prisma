// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
}

//Trabalho de Elison, Nao mexer
model Dono {
  id        Int      @id @default(autoincrement())
  nome      String
  sobrenome String
  cpf       String   @unique
  animais   Animal[]
}

model Animal {
  id        Int    @id @default(autoincrement())
  nome      String
  especie   String
  idade     Int
  vacinado  Boolean
  dono      Dono?  @relation(fields: [donoId], references: [id])
  donoId    Int?
}
